extends ../layout

block content
  .page-header
    h3(align='center') Reiniciar Contraseña
  .col-sm-8.col-sm-offset-2
    form(method='POST')
      input(type='hidden', name='_csrf', value=_csrf)
      .form-group
        label(for='password') Nueva Contraseña
        input.form-control(type='password', name='password', id='password', placeholder='New password', autofocus, required)
      .form-group
        label(for='confirm') Confirmala
        input.form-control(type='password', name='confirm', id='confirm', placeholder='Confirm password', required)
      .form-group
        button.btn.btn-default.btn-reset(type='submit')
          i.fa.fa-keyboard-o
          | Cambiar Contraseña
