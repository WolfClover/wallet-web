.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle.pull-left.ml(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      .navbar-brand
        img.res(href='/home', src='../img/clovercoin.png', alt='Denarius', border='0')
      if user
        .navbar-send.hidden-sm.hidden-md.hidden-lg.hidden-xl
          a.send(href='/withdraw')
            i.fa.fa-paper-plane
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        if !user
          li(class=(title == 'Home') ? 'active' : undefined)
            a(href='/') Home
          li(class=(title == 'Gitter Chat') ? 'active' : undefined)
            a(href='https://t.me/wolf_clover/', target='_blank') Grupo Oficial
          li(class=(title == 'Contact') ? 'active' : undefined)
            a(href='/contact') Soporte
        else
          li(class=(title == 'Mi Wallet') ? 'active' : undefined)
            a(href='/wallet') Mi Wallet
          li(class=(title == 'Mi Addresses') ? 'active' : undefined)
            a(href='/addresses') Mi Addresses
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title == 'Iniciar Sesion') ? 'active' : undefined)
            a(href='/login') Iniciar Sesion
          li(class=(title == 'Create Account') ? 'active' : undefined)
            a(href='/signup') Crear Cuenta
        else
          li(class=(title == 'Enviar WCC') ? 'active' : undefined)
            a(href='/withdraw')
              i.fa.fa-paper-plane 
              | SEND
          li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src=user.profile.picture)
              else
                img(src=user.gravatar(60))
              span= user.email || user.id
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') Mi cuenta
              li.divider
              li
                a(href='/logout') Cerrar sesion
